<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog.mapper.ArticleMapper">
    <resultMap id="ArticleMap" type="Article">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="publishTime" column="publish_time"/>

        <association property="publisher" javaType="User">
            <result property="id" column="publisher_id"/>
        </association>
    </resultMap>

    <select id="getAllExceptContent" resultMap="ArticleMap">
        select publisher_id, article.id, title, publish_time
        from user_information, article
        where user_information.id = publisher_id
        order by publish_time desc
    </select>


    <select id="getAllExceptContent_ByPublisherId" resultMap="ArticleMap" parameterType="int">
        select id, title, publish_time
        from article
        where publisher_id=#{publisherId}
        order by publish_time desc
    </select>

    <delete id="deleteArticle" parameterType="int">
        delete
        from article
        where id = #{articleId}
    </delete>

    <select id="getContent" resultType="String" parameterType="int">
        select content from article where id = #{articleId}
    </select>

    <select id="getPublisher" resultType="int" parameterType="int">
        select publisher_id from article where id = #{articleId}
    </select>

    <select id="getTitle" resultType="String" parameterType="int">
        select title from article where id=#{articleId}
    </select>
    <insert id="insertArticle" parameterType="Article">
        insert into article(title,content,publish_time,publisher_id) values(#{title},#{content},now(),#{publisher.id})
    </insert>
    <update id="updateArticle" parameterType="Article">
        update article set content=#{content} where id=#{id}
    </update>
</mapper>

